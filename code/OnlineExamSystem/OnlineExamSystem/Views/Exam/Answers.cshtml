@model IEnumerable<DataModel.AnswerMaster>
@{
    ViewBag.Title = "Answers";
}
<div class="page-header">
    <h3 class="page-title">
        Add Answers
    </h3>
    <a href="#" class="btn btn-primary myformbtn" onclick="openAnswerForm()"><i class="glyphicon glyphicon-plus"></i> Add Answers</a>
</div>
<div id="divFormDetails">

</div>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
else if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
<div class="mt-5 table-responsive">
    <table id="admin" class="table table-striped table-bordered box-shadow" style="width:100%">
        <thead class="bg-dark text-white">
            <tr>
                <th> Answer Id </th>
                <th>Question</th>
                <th> Answer </th>
                <th> Is-Right </th>
                <th>&nbsp; </th>
                <th>&nbsp; </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.ToList().Count() > 0)
            {
                foreach (var item in Model.ToList())
                {
            <tr>
                <td>@item.AnswerId</td>
                <td>@item.Question</td>
                <td>@item.Answer</td>
                <td>
                    @item.IsRight
                <span class="glyphicon glyphicon-ok"></span>
            </td>
            <td>
                <a href="#" onclick="openAnswersForm(@item.AnswerId)" class="btn btn-sm myformbtn btn-primary">
                    <i class="text-white mdi mdi-circle-edit-outline menu-icon "></i>
                </a>
            </td>
            <td>
                <a href="#" type="button" onclick="deleteAnswers(@item.AnswerId)" class="btn btn-sm  btn-danger">
                    <i class="text-white mdi mdi-delete-circle-outline menu-icon"></i>
                </a>
            </td>
            </tr>
                }
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script src="~/Scripts/js/Exam.js"></script>
}