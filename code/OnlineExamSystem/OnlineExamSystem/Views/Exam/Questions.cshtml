@model IEnumerable<DataModel.QuestionMaster>
<div class="page-header">
    <h3 class="page-title">
        Add Questions
    </h3>
    <a href="#" class="btn btn-primary myformbtn" onclick="openQuestionsForm()"><i class="glyphicon glyphicon-plus"></i> Add Questions</a>
</div>
<div id="divFormDetails">

</div>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
else if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
<!-- start detail -->
<div class="mt-5 table-responsive">
    <table id="admin" class="table table-striped table-bordered box-shadow" style="width:100%">
        <thead class="bg-dark text-white">
            <tr>
                <th> Question Id </th>
                <th>Course Name</th>
                <th>Question</th>
                <th> Answer Type </th>
                <th> Marks </th>
                <th>&nbsp; </th>
                <th>&nbsp; </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.ToList().Count() > 0)
            {
                foreach (var item in Model.ToList())
                {
                    <tr>
                        <td>@item.QuestionId</td>
                        <td>@item.CourseName</td>
                        <td>@item.Question</td>
                        <td class="py-1">@item.AnswerType</td>
                        <td> @item.Marks</td>
                        <td>
                            <a href="#" onclick="openQuestionsForm(@item.QuestionId)" class="btn btn-sm myformbtn btn-primary">
                                <i class="text-white mdi mdi-circle-edit-outline menu-icon "></i>
                            </a>
                        </td>
                        <td>
                            <a href="#" type="button" onclick="deleteQuestions(@item.QuestionId)" class="btn btn-sm  btn-danger">
                                <i class="text-white mdi mdi-delete-circle-outline menu-icon"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>
@section scripts{
<script src="~/Scripts/js/Exam.js"></script>
}