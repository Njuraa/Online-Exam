@model DataModel.FeesMaster
@{
    ViewBag.Title = "AddFees";
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row  myform">
        <div class="col-md-6 grid-margin stretch-card m-auto">
            <div class="card box-shadow">
                <div class="card-body text-center">
                    <a onclick="CloseForm();" class="crossbtn btn btn-link btn-sm float-right">X</a>
                    <h4 class="card-title">Create Fees</h4>
                    <div class="forms-sample">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.FeesId)
                        <div class="form-group">
                            @Html.DropDownListFor(model => model.CourseId, new SelectList(Model.ListCourse, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "ddlCourse" })
                        </div>
                        <div class="form-group">
                            @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", @placeholder = "Description" })
                        </div>
                        <div class="form-group">
                            @Html.TextAreaFor(model => model.Offer, htmlAttributes: new { @class = "form-control", @placeholder = "Offer" })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(model => model.Amount, new{ htmlAttributes = new { @class = "form-control",  @placeholder = "Fees Amount" }})
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(model => model.SGST, new { htmlAttributes = new { @class = "form-control",  @placeholder = "SGST Amount" }})
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(model => model.CGST, new { htmlAttributes = new { @class = "form-control",  @placeholder = "CGST Amount" }})
                        </div>
                        <div class="form-group text-center m-0">
                            <button type="submit" onclick="validate();" class="btn btn-gradient-primary mr-2">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
}

